{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@content/*": [
        "src/content/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    },
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "astro.config.*",
    "types/**/*.d.ts"
  ]
}