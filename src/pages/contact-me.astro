---
import Layout from "@layouts/Layout.astro";
import Footer from "@src/components/common/Footer.astro";
import AnchorNavigationText from "@src/components/ui/AnchorNavigationText.astro";
import Form from "@src/components/ui/Form.astro";

import type { lang } from "@src/types";

const lang: lang = "en";
---

<Layout title="Nelson Rojas - Frontend Developer" lang={lang}>
    <div class="lg:py-8 lg:px-40 mb-16">
        <div class="mb-16">
            <span class="text-accent">
                <AnchorNavigationText href="/" class:list={["py-2"]} goBack>
                    Nelson Rojas
                </AnchorNavigationText>
            </span>
            <h1 class="text-4xl lg:text-5xl mb-4">Contact me</h1>
        </div>
        <Form lang={lang} />
    </div>
    <Footer class:list={["text-center"]} />
</Layout>
