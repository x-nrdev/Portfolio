---
import Footer from "@src/components/common/Footer.astro";
import AnchorNavigationText from "@src/components/ui/AnchorNavigationText.astro";
import Layout from "@src/layouts/Layout.astro";
import H1 from "@src/components/headings/H1.astro";

const lang = Astro.currentLocale;
---

{
    lang === "es" ? (
        <>
            <Layout title="404 Not Found" lang="es" isNotFound>
                <div class="relative grid min-h-screen text-center place-content-center">
                    <div>
                        <H1 class="mb-4 text-4xl font-bold leading-tight text-balance font-nunitoBold lg:text-5xl">
                            <span class="text-accent">404</span> Página no
                            encontrada
                        </H1>
                        <p class="mb-4 text-2xl">
                            No se ha podido encontrar esta página.
                        </p>
                        <AnchorNavigationText
                            class:list="place-self-center text-xl"
                            href="/es"
                            goBack={false}
                        >
                            Inicio
                        </AnchorNavigationText>
                    </div>
                    <Footer
                        lang="es"
                        class:list={[
                            "absolute bottom-4 place-self-center text-center"
                        ]}
                    />
                </div>
            </Layout>
        </>
    ) : (
        <>
            <Layout title="404 Not Found" lang="en" isNotFound>
                <div class="relative grid min-h-screen text-center place-content-center">
                    <div>
                        <H1 class="mb-4 text-4xl font-bold leading-tight text-balance font-nunitoBold lg:text-5xl">
                            <span class="text-accent">404</span> Not Found
                        </H1>
                        <p class="mb-4 text-2xl">
                            This page could not be found.
                        </p>
                        <AnchorNavigationText
                            class:list="place-self-center text-xl"
                            href="/"
                            goBack={false}
                        >
                            Homepage
                        </AnchorNavigationText>
                    </div>
                    <Footer
                        lang="en"
                        class:list={[
                            "absolute bottom-4 place-self-center text-center"
                        ]}
                    />
                </div>
            </Layout>
        </>
    )
}
