---
import Layout from "@src/layouts/Layout.astro";
import AllProjects from "@src/components/AllProjects.astro";
import Footer from "@src/components/common/Footer.astro";
import AnchorNavigationText from "@src/components/ui/AnchorNavigationText.astro";
import H1 from "@src/components/headings/H1.astro";
---

<Layout title="Nelson Rojas - Frontend Developer | Projects" lang="en">
    <div class="lg:py-8 lg:px-40">
        <span class="text-accent">
            <AnchorNavigationText href="/" class:list={["py-2"]} goBack>
                Nelson Rojas
            </AnchorNavigationText>
        </span>
        <H1 class="text-4xl lg:text-5xl lg:px-4 mb-4">All Projects</H1>
        <AllProjects lang="en" />
        <div class="lg:text-center lg:px-4 text-pretty">
            <Footer />
        </div>
    </div>
</Layout>
