import AnchorText from "@components/ui/AnchorText.astro";

const { class: className } = Astro.props;
---

<footer class={`text-pretty ${className && className}`}>
    <p>
        Inspirado por el portafolio de <AnchorText
            class:list={["font-bold"]}
            href="https://brittanychiang.com/"
            noFollow
        >
            Brittany Chiang.</AnchorText
        >
    </p>
    <p>
        Desarrollado con<AnchorText
            class:list={["font-bold"]}
            href="https://astro.build/"
            noFollow>Astro,</AnchorText
        >
        <AnchorText
            class:list={["font-bold"]}
            noFollow
            href="https://tailwindcss.com/">Tailwind CSS,</AnchorText
        >
        y <AnchorText
            class:list={["font-bold"]}
            href="https://www.typescriptlang.org/"
            noFollow>TypeScript.</AnchorText
        >
