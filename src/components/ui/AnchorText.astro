---
import type { AnchorTextType } from "@src/types";

type Props = AnchorTextType;

const { href, target, class: className, noFollow } = Astro.props;
---

<a
    class=`lg:hover:text-accent transition-colors transition-duration-custom ease-in-out ${className}`
    href={href}
    target={target ? target : "_blank"}
    rel={noFollow ? "nofollow noopener noreferrer" : ""}
>
    <slot />
</a>
