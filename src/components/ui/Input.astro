---
const {
    class: className = "",
    type = "text",
    name,
    id,
    placeholder,
    pattern,
    required
} = Astro.props;

const inputName = `input-${name}`;
---

<style>
    input {
        border: 2px solid transparent;
        outline: none;
    }

    .input-state:valid {
        border-color: oklch(0.723 0.219 149.579);
    }
    .input-state:invalid {
        border-color: oklch(0.656 0.241 354.308);
    }

    input:focus {
        border-color: rgb(186 168 255 / var(--tw-bg-opacity, 1));
    }
</style>

<input
    class={`${className} w-full rounded-md bg-secondary text-white px-4 py-1 ${inputName}`}
    type={type}
    name={name}
    id={id}
    placeholder={placeholder}
    pattern={pattern}
    required={required}
/>
