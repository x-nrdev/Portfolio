---
import H2 from "../headings/H2.astro";
---

<div class="min-h-screen grid content-center fixed mx-auto">
    <div class="flex flex-col bg-gray-900 rounded-lg p-4 shadow-sm max-w-xl">
        <H2 class="text-white font-bold text-lg">Contact me</H2>

        <div class="mt-4 flex gap-4">
            <div class="">
                <label class="text-white" for="name">Name</label>
                <input
                    placeholder="Your name"
                    class="w-full bg-gray-800 rounded-md border-gray-700 text-white px-2 py-1"
                    type="text"
                />
            </div>
            <div>
                <label class="text-white" for="name">Surname</label>
                <input
                    placeholder="Your surname"
                    class="w-full bg-gray-800 rounded-md border-gray-700 text-white px-2 py-1"
                    type="text"
                />
            </div>
        </div>

        <div class="mt-4">
            <label class="text-white" for="message">Message</label>
            <textarea
                placeholder="Your message"
                class="w-full bg-gray-800 rounded-md border-gray-700 text-white px-2 py-1"
                id="message"></textarea>
        </div>
        <div class="mt-4 flex justify-end">
            <button
                class="bg-white text-black rounded-md px-4 py-1 hover:bg-accent hover:text-black transition-all duration-200"
                type="submit">Submit</button
            >
        </div>
    </div>
</div>
